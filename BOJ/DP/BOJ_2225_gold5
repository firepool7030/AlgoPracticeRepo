# BOJ_2225_gold5

import sys
input = lambda : sys.stdin.readline().strip()

n, k = map(int, input().split())
dp = [[1] * n for _ in range(k)]
cnt = 1

for rows in dp:
    rows[0] = cnt
    cnt += 1

for i in range(1, k):
    for j in range(1, n):
        dp[i][j] = dp[i - 1][j] + dp[i][j - 1]

print(dp[k - 1][n - 1])
